<%
  page = { 'title': 'Social', 'key': 'Social', 'ngApp': 'social' };
  page.description = "FamilySearch Social";
  page.bgDark = false;
  assets = {
    'css': [ 'index.css' ],
    'js': [
      'angular-1.2.23.min.js',
      'app.js',
      'friendService.js',
      'friendListCtrl.js',
      'userPortrait.js',
      'userPortraitService.js',
      'bootstrap.js',
      'bootstrap-tooltip.js',
      'inviteFriend.js'
    ]
  };
%>
<script type="text/javascript">FS.social = <%- JSON.stringify(user) %></script>

<div class="banner row">
    <user-portrait class="pull-left" value="<%= user.profile.id %>"></user-portrait>
    <h1 class="title pull-left">Friends</h1>
    <button class="btn btn-success pull-right invite-btn" invite-friend="">Invite Friend</button>
</div>

<section class="friend-list">
  <div id="main" class="container" ng-controller="friendListCtrl">
    <ol class="friends">
      <li ng-repeat="friend in friends">{{friend.display_name}} - {{friend.user_id}}</li>
    </ol>
  </div>
</section>